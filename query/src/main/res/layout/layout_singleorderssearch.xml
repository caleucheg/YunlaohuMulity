<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rel_order_search_area_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rel_height"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white_color">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="@string/single_orders_search_order_code"
            android:textSize="@dimen/text_size_16sp" />

        <com.yang.yunwang.base.ui.ClearEditText
            android:id="@+id/edit_single_order_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toStartOf="@+id/image_scan"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/orders_search_order_code"
            android:inputType="number"
            android:textColorHint="@color/label_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:scaleType="center"
            android:src="@drawable/icon_scan" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_order_search_area_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rel_height"
        android:layout_below="@id/rel_order_search_area_1"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white_color">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="@string/pl_order_no"
            android:textSize="@dimen/text_size_16sp" />

        <com.yang.yunwang.base.ui.ClearEditText
            android:id="@+id/edit_single_order_code2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toStartOf="@+id/image_scan2"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/pl_order_no"
            android:inputType="number"
            android:textColorHint="@color/label_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/image_scan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:clickable="false"
            android:scaleType="center"
            android:src="@drawable/icon_scan"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_single_order_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_order_search_area_2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/material_button"
        android:text="@string/single_btn_orders_search"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_20sp" />

    <RelativeLayout
        android:id="@+id/rel_single_info_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_single_order_search"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/rel_info_background"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rel_single_order_area_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_code"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_1"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_1"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/pl_order_no"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_12"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_12"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_12"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_pay_type"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_2"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_money"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_3"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_3"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_cny"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_cny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_4"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_4"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_time"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_single_order_area_5"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_single_order_area_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_5"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:id="@+id/text_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/single_order_status"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_single_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@id/text_label_status"
                android:gravity="right"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>