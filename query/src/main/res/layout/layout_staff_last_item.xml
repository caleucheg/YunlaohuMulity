<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_list_item_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1dp"
            android:background="@color/divide_gray_color" />
        <ImageView
            android:id="@+id/image_order_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/staff_logo" />

        <TextView
            android:id="@+id/text_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toEndOf="@+id/image_order_logo"
            android:layout_toStartOf="@+id/text_staff_time"
            android:ellipsize="end"
            android:lines="1"
            android:text="张三"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_20sp" />

        <TextView
            android:id="@+id/text_staff_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_staff_time"
            android:layout_alignTop="@+id/image_order_logo"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="1333255465656"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_20sp" />

        <TextView
            android:id="@+id/text_staff_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_staff_tel"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="2016-01-01 23:56:56"
            android:textColor="@color/grey_error"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/last_item_height"
        android:layout_below="@+id/rel_list_item_area" />
</RelativeLayout>