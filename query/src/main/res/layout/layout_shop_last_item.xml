<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1dp"
        android:background="@color/divide_gray_color" />
    <RelativeLayout
        android:id="@+id/rel_list_item_area"
        android:layout_below="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_order_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:src="@drawable/shop_logo" />

        <TextView
            android:id="@+id/text_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_toEndOf="@+id/image_order_logo"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="朝阳区潮流时尚二零四六发艺工作室"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/last_item_height"
        android:layout_below="@+id/rel_list_item_area" />


</RelativeLayout>