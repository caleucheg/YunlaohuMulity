<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_settlement_area_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white_color">

        <RelativeLayout
            android:id="@+id/rel_settlement_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_name"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView1"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_settlement_item_1"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_settlement_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_1"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_money"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlement_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView2"
                android:background="@null"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:lines="1"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_settlement_item_2"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_settlement_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_cash"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlement_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView3"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_settlement_item_3"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_settlement_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_3"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_cny"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlement_cny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView4"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_settlement_item_4"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_settlement_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_4"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_count"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlement_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView5"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_settlement_item_5"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_settlement_item_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_5"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/staffcollect_count1"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/edit_settlement_count0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView6"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:hint="@string/settlement_hint"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <include
        layout="@layout/layout_home_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_bar_height"
        android:layout_alignParentBottom="true" />
</RelativeLayout>