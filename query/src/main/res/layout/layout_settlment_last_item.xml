<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_list_item_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_settlement_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:src="@drawable/staff_logo" />

        <TextView
            android:id="@+id/text_settlement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toEndOf="@+id/image_settlement_logo"
            android:layout_toStartOf="@+id/text_settlement_money"
            android:ellipsize="end"
            android:lines="1"
            android:text="张三g"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_settlement_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_settlement_money"
            android:layout_alignTop="@+id/image_order_logo"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="8236笔"
            android:textColor="@color/grey_error"
            android:textSize="@dimen/text_size_18sp" />

        <TextView
            android:id="@+id/text_settlement_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_settlement_count"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="337723.00元"
            android:textColor="@color/grey_error"
            android:textSize="@dimen/text_size_16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/last_item_height"
        android:layout_below="@+id/rel_list_item_area" />


</RelativeLayout>