<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back_color">

    <RelativeLayout
        android:id="@+id/rel_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white_color">

        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:src="@drawable/login_user" />

            <com.yang.yunwang.base.ui.ClearEditText
                android:id="@+id/edit_merchant_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@null"
                android:hint="@string/hint_user"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_20sp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linear_user"
            android:background="@color/divide_gray_color" />

        <LinearLayout
            android:id="@+id/linear_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:src="@drawable/login_password" />

            <com.yang.yunwang.base.ui.ClearEditText
                android:id="@+id/edit_merchant_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`!@#$%^*()_\\/+=-`,.;:[]{}\\\?|'~&lt;&gt;&amp;"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textColor="@color/black_color"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size_20sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>