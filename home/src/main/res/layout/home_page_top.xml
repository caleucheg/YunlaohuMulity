<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_cash_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:text="实收金额"
        android:textColor="@color/black_color_text"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp">

        <TextView
            android:id="@+id/tv_rmb_seb"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/black_color_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title_cash_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/black_color_text"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_10dp"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp">

            <TextView
                android:id="@+id/left_cash_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易笔数"
                android:textColor="@color/black_color_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/left_cash_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/black_color_text"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_color_line" />

        <LinearLayout
            android:id="@+id/ll_active_cus"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp">

            <TextView
                android:id="@+id/right_cash_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日活跃商户"
                android:textColor="@color/black_color_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/right_cash_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/black_color_text"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1dp"
        android:background="@color/grey_color_line" />

</LinearLayout>