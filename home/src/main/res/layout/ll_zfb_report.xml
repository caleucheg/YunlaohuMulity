<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_20dp">

        <ImageView
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:scaleType="fitXY"
            android:src="@drawable/report_zfb_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_5dp"
            android:text="支付宝支付"
            android:textColor="@color/black_color_text"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/out_line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_c_ding"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:background="@drawable/green_circle"
                    android:gravity="center"
                    android:text="订"
                    android:textColor="@color/white_color"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_c_ding"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="订单金额(元)"
                        android:textColor="@color/black_color_text" />

                    <TextView
                        android:id="@+id/tv_zfb_order_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000,000,000"
                        android:textColor="@color/grey_color_text" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/divider_1dp"
                android:layout_height="match_parent"
                android:background="@color/hint_color" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_c_show"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:background="@drawable/blue_circle"
                    android:gravity="center"
                    android:text="收"
                    android:textColor="@color/white_color"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_c_show"

                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="实收金额(元)"
                        android:textColor="@color/black_color_text" />

                    <TextView
                        android:id="@+id/tv_zfb_cash_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000,000,000"
                        android:textColor="@color/grey_color_text" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1dp"
            android:background="@color/hint_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_c_bi"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:background="@drawable/prueple_circle"
                    android:gravity="center"
                    android:text="笔"
                    android:textColor="@color/white_color"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_c_bi"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="交易笔数"
                        android:textColor="@color/black_color_text" />

                    <TextView
                        android:id="@+id/tv_zfb_order_trade_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000,000,000"
                        android:textColor="@color/grey_color_text" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/divider_1dp"
                android:layout_height="match_parent"
                android:background="@color/hint_color" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_c_tui"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:text="退"
                    android:textColor="@color/white_color"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_c_tui"
                    android:gravity=""
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:text="退款金额(元)|笔"
                        android:textColor="@color/black_color_text" />

                    <TextView
                        android:id="@+id/tv_zfb_refund_fee_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1,0000000000,000|100"
                        android:textColor="@color/grey_color_text" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>