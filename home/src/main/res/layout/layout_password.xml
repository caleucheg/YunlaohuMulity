<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back_color">


    <RelativeLayout
        android:id="@+id/rel_mine_password_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@color/white_color">

        <RelativeLayout
            android:id="@+id/rel_mine_password_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/mine_password_user"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_20sp" />

            <EditText
                android:id="@+id/edit_mine_password_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView13"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_mine_password_item_1"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_mine_password_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_1"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/mine_password_old"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_20sp" />

            <com.yang.yunwang.base.ui.ClearEditText
                android:id="@+id/edit_mine_password_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView14"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`!@#$%^*()_+=-`,.;:[]{}\\\?|'~\\/&lt;&gt;&amp;"
                android:gravity="right"
                android:inputType="textPassword"
                android:textColor="@color/black_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_mine_password_item_2"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_mine_password_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/mine_password_new"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_20sp" />

            <com.yang.yunwang.base.ui.ClearEditText
                android:id="@+id/edit_mine_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView15"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`!@#$%^*()_+=-`,.;:[]{}\\\?|'~\\/&lt;&gt;&amp;"
                android:gravity="right"
                android:inputType="textPassword"
                android:textColor="@color/black_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_mine_password_item_3"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/divide_gray_color" />

        <RelativeLayout
            android:id="@+id/rel_mine_password_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_3"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/mine_password_repeat"
                android:textColor="@color/label_color"
                android:textSize="@dimen/text_size_20sp" />

            <com.yang.yunwang.base.ui.ClearEditText
                android:id="@+id/edit_mine_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_toEndOf="@+id/textView16"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`!@#$%^*()_+=-`,.;:[]{}\\\?|'~\\/&lt;&gt;&amp;"
                android:gravity="right"
                android:inputType="textPassword"
                android:textColor="@color/black_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/material_button"
        android:text="@string/mine_password_btn"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_16sp" />
</RelativeLayout>